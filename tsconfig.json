{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2015",
    "allowJs": true,
    "types": ["node", "jest"],
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "paths": {
      "@rx-cart/*": ["src/cart/*"],
      "@rx-cart-interfaces": ["src/interfaces"]
    }
  },
  "files": ["src/RxCart.ts"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
